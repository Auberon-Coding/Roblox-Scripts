-- Instances:

local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")
local UICorner = Instance.new("UICorner")
local UIGradient = Instance.new("UIGradient")

--Properties:

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

TextLabel.Parent = ScreenGui
TextLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.Position = UDim2.new(0.627758026, 0, 0.0906949639, 0)
TextLabel.Size = UDim2.new(0, 233, 0, 73)
TextLabel.Font = Enum.Font.DenkOne
TextLabel.Text = "Strength"
TextLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
TextLabel.TextScaled = true
TextLabel.TextSize = 14.000
TextLabel.TextWrapped = true

UICorner.Parent = TextLabel

UIGradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0.00, Color3.fromRGB(112, 212, 255)), ColorSequenceKeypoint.new(0.02, Color3.fromRGB(0, 0, 0)), ColorSequenceKeypoint.new(0.98, Color3.fromRGB(112, 212, 255)), ColorSequenceKeypoint.new(1.00, Color3.fromRGB(112, 212, 255))}
UIGradient.Offset = Vector2.new(0.5, 0)
UIGradient.Rotation = -195.5
UIGradient.Parent = TextLabel

-- Scripts:

local function UXOAX_fake_script() -- TextLabel.Numbers 
	local script = Instance.new('LocalScript', TextLabel)

	local l = true
	
	while(l==true) do 
		local player = game:GetService("Players").LocalPlayer
		local playerName = player.Name
		wait(0.5)
	
		local str = game.Players.LocalPlayer.leaderstats.Strength;
		local formattedEarned = str.Value;
		local earned = 0;
		str:GetPropertyChangedSignal("Value"):Connect(function()
			local delta = (str.Value - curvalue);
			earned += delta;
			TextLabel.Text = ""..earned;
			curvalue = str.Value;
		end)
	
		if formattedEarned >= 1e12 then
			formattedEarned = string.format("%.2fT", formattedEarned / 1e12)
		elseif formattedEarned >= 1e9 then
			formattedEarned = string.format("%.2fB", formattedEarned / 1e9)
		elseif formattedEarned >= 1e6 then
			formattedEarned  = string.format("%.2fM", formattedEarned / 1e6)
		elseif formattedEarned >= 1e3 then
			formattedEarned = string.format("%.2fK", formattedEarned / 1e3)
		end
	
		TextLabel.Text = formattedEarned 
	end
end
